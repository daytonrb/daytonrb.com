<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}
      / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "The Middleman"
    = stylesheet_link_tag "app"
    = javascript_include_tag  "all"

  %body{:class => page_classes}

    %section.header

      .row.hide
        .three.columns
        .nine.columns
          %ul.nav-bar.right{"data-magellan-expedition" => "fixed"}
            %li{"data-magellan-arrival" => "home"}
              %a{:href => "#"} Home
            %li{"data-magellan-arrival" => "about"}
              %a{:href => "#"} About
            %li{"data-magellan-arrival" => "events"}
              %a{:href => "#"} Events
            %li{"data-magellan-arrival" => "contact"}
              %a{:href => "#"} Contact

    = yield

    %footer.row.hide
      .twelve.columns
        %hr/
        .row
          .six.columns
