<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}
      / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "The Middleman"
    %link{:href => "/fonts/ss-social.css", :rel => "stylesheet"}/
    %link{:href => "/images/favicon.png", :rel => "shortcut icon"}/

    = stylesheet_link_tag "app"
    = javascript_include_tag  "all"

  %body{:class => page_classes}

    = yield

    %footer
      .row
        .twelve.columns
          %br/
          .row.centered
            .six.columns.centered
              %p.capitalize.text-center
                Supported by
                = link_to image_tag('icon-littlelines.png')
                = link_to "Littlelines", "http://littlelines.com"
                &copy;
                = Time.now.year

    = javascript_include_tag  "all"
